{
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "lib",
    "experimentalDecorators": true,
    "target": "ES2021",
    "sourceMap": true,
    "strictNullChecks": true,
    "allowJs": true,
    "esModuleInterop": true,
    "removeComments": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ]
  },
}
